# OpenAI
OPENAI_API_KEY=your_openai_key_here

# YandexGPT
YANDEX_FOLDER_ID=your_folder_id
YANDEX_API_KEY=your_yandex_key_here

# GigaChat
GIGACHAT_CREDENTIALS=your_gigachat_credentials
GIGACHAT_CERT_PATH=russian_trusted_root_ca.cer
GIGACHAT_VERIFY_SSL_CERTS=true  # false позволяет работать без корневого сертификата (на свой риск)

# Security
# API_KEY обязателен в production (TEST_MODE=false)
# Если не задан, API будет открыт для всех (только для разработки!)
API_KEY=your_api_key_here

# Test mode (useful for UI demo without real keys)
# В TEST_MODE=true API_KEY не требуется, но рекомендуется для безопасности
TEST_MODE=true


